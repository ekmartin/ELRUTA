@import 'nib'

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased

a
  text-decoration none

html
  background url('/images/mountains.jpg') no-repeat center center fixed
  background-size cover
  height 100%

body
  opacity 0.92
  height 100%
  line-height 2
  font-family 'Helvetica Neue', Helvetica, sans-serif
  font-size 16px
  background-color rgba(249,249,247, 0.8)
  position relative

h1
  font-size 30px
  color white
  padding-left 20px

header
  position absolute
  height 80px
  padding 10px
  background #2BB3E5
  absolute left top right
  top 10px
  left 10px
  right 10px

#navbar-content
  absolute top right
  margin-right 10px
  right 10px
  top 10px
  height 100%
  width 10%

  .grid a
    display inline-block
    right 20px
    background #2BB3E5
    height 25%
    width 50%
    line-height 60px
    text-align center
    color #fff

    &:hover
      background #18637F
      font-weight 700

#sidebar
  position absolute
  top 100px
  width 15%
  absolute left
  background #2495BF
  padding 20px
  margin-left 10px
  bottom 210px

  .grid a
    display inline-block
    background #2495BF
    height 25%
    width 50%
    line-height 100px
    text-align center
    color #fff

    &:hover
      background #18637F
      font-weight 700

#content
op
  position absolute
  top 100px
  left 15%
  margin-left 20px
  bottom 210px
  right 10px
  background #fff

footer
  position absolute
  height 190px
  absolute left bottom right
  bottom 10px

#category-nav
  background #18637F
  position absolute
  width 15%
  height 100%
  left 10px
  margin-right 10px

  .subgrid a
    display inline-block
    background #18637F
    height 25%
    width 50%
    line-height 95px
    text-align center
    color #fff

    &:hover
      background #2c3e50
      font-weight 700

#subfooter
  position absolute
  height 190px
  absolute left bottom right
  left 15%
  margin-left 20px

#sub-category-nav
  position absolute
  width 50%
  background #2BB3E5

  .grid a
    display inline-block
    background #2BB3E5
    height 50%
    width 25%
    line-height 95px
    text-align center
    color #fff

    &:hover
      background #18637F
      font-weight 700

#footer-content
  position absolute
  background #bdc3c7
  padding 20px
  left 50%
  height 100%
  margin-left 10px
  right 10px
