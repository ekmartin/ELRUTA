@import 'nib/reset'
@import 'nib/vendor'
@import 'nib/gradients'

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased

body
  background-color: #f9f9f7
  line-height 2
  font-family 'Helvetica Neue', Helvetica, sans-serif
  font-size 16px
  position relative

h1
  font-size 30px

#container
  width: 70%
  margin: 0 auto

header
  background linear-gradient(bottom, #1b8471, #2980b9)
  position fixed
  top 0
  left 0
  right 0

nav
  ul

    li
      display inline-block

      a
        font-size 26px
        font-weight 400
        display inline-block
        padding 30px 60px
        color #fff
        text-decoration none
        font-weight 700

        &:hover
          background rgba(255, 255, 255, .1)

section
  position relative
  top 120px

footer
  background linear-gradient(#ddd, #efefef)
  position fixed
  bottom 0
  left 0
  right 0
  height 200px
  padding 20px

#graph
  height: 400px

#acc
  width: 100%
  margin-top: 2%
#acc .active.title
  background-color: #296ad4
