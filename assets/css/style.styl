@import 'nib'

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased

a
  text-decoration none

html
  background url('/images/mountains.jpg') no-repeat center center fixed
  background-size cover
  height 100%

body
  height 100%
  line-height 2
  font-family 'Helvetica Neue', Helvetica, sans-serif
  font-size 16px
  background-color rgba(249,249,247, 0.8)
  position relative

h1
  font-size 30px

header
  height 100px
  padding 20px
  background #2980b9
  absolute left top right

#sidebar
  width 20%
  position absolute
  absolute left bottom
  top 100px
  background #3498db
  padding 20px

#content
  position absolute
  top 100px
  left 20%
  bottom 200px
  right 0
  background #fff

footer
  height 200px
  background pink
  absolute left bottom right

#category-nav
  background #ecf0f1
  position absolute
  width 20%
  height 100%

  li a
    display block
    background #bdc3c7
    border-bottom 1px solid #fff
    padding 5px 10px

#sub-category-nav
  position absolute
  left 20%
  width 30%
  height 100%
  background blue

  .grid a
    display inline-block
    background #34495e
    height 50%
    width 25%
    line-height 100px
    text-align center
    color #fff

    &:hover
      background #2c3e50
      font-weight 700

#footer-content
  right 0
  position absolute
  background #27ae60
  padding 20px
  width 50%
  height 100%
