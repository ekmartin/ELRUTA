@import 'nib/reset'
@import 'nib/vendor'
@import 'nib/gradients'

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased

html
  background: url('/images/mountains.jpg') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height 100%

body
  height 100%
  line-height 2
  font-family 'Helvetica Neue', Helvetica, sans-serif
  font-size 16px
  position relative
  background-color rgba(249,249,247, 0.8)

h1
  font-size 30px

.ui.vertical.inverted.menu .item
  font-size 2.5rem


#left
#right
  background-color #2a87d3
  width 100%

#container
  opacity 0.85
  overflow hidden
  width 90%
  margin 0 auto

header
  background linear-gradient(bottom, #1b8471, #2980b9)
  position fixed
  top 0
  left 0
  right 0

nav
  ul

    li
      display inline-block

      a
        font-size 26px
        font-weight 400
        display inline-block
        padding 30px 60px
        color #fff
        text-decoration none
        font-weight 700

        &:hover
          background rgba(255, 255, 255, .1)

section
  position relative
  top 120px

footer
  background linear-gradient(#ddd, #efefef)
  position fixed
  bottom 0
  left 0
  right 0
  height 200px
  padding 20px

#graph
  height 400px
  margin 0 auto

#acc
  width 100%
  margin 2% auto
#acc #first
  color #fff
  background-color #2a87d3
