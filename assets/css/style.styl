@import 'nib/reset'
@import 'nib/vendor'
@import 'nib/gradients'

global-reset()

$body-padding = 15px

*
  box-sizing border-box
  font-smoothing antialiased

a
  text-decoration none

html
  background: url('/images/mountains.jpg') no-repeat center center fixed;
  background-size cover
  height 100%

body
  height 100%
  line-height 2
  font-family 'Helvetica Neue', Helvetica, sans-serif
  font-size 16px
  position relative
  background-color rgba(249,249,247, 0.8)

h1
  font-size 30px


#left
#right
  background-color #2a87d3
  width 100%

header
  background linear-gradient(bottom, #1b8471, #2980b9)
  opacity .8
  position fixed
  top $body-padding
  left $body-padding
  right $body-padding
  height 100px
  border-radius 10px

nav
  ul
    text-align center

    li
      display inline-block
      height 100px

      a
        font-size 36px
        font-weight 400
        display inline-block
        line-height 100px
        height 100px
        padding 0 40px
        color #fff
        text-decoration none
        font-weight 700
        transition all .7s

        &:hover
          background rgba(255, 255, 255, .1)

section
  position relative
  top 140px
  margin-left 300px
  padding 20px

aside
  width 300px
  position fixed
  bottom 225px
  top 125px
  left 15px
  border-radius 10px
  background rgba(0, 0, 0, .3)
  padding-top 20px
  opacity 1

  &.ng-hide
    opacity 0

  &.ng-hide-add
    animation fadeIn 1s
    opacity 1

    &.active
      opacity 0

  ul li a
    display block
    background linear-gradient(rgba(0, 0, 0, .2), rgba(255, 255, 255, .2))
    color #fff
    padding 5px 20px

footer
  background rgba(255, 255, 255, .7)
  position fixed
  bottom $body-padding
  left $body-padding
  right $body-padding
  height 200px
  padding 20px
  border-radius 10px

#graph
  height 400px
  margin 0 auto

#acc
  width 100%
  margin 2% auto
#acc #first
  color #fff
  background-color #2a87d3
