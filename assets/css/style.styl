@import 'nib'

global-reset()

$light = #FBFBFA
$dark = #312E3F
$lighter-dark = #7DA5BF
$reddish = #D66457
$lightest = #E9E9E7

@font-face
  font-family 'Montserrat';
  font-style normal;
  font-weight 400;
  src url("/Montserrat.woff") format('woff');

*
  box-sizing border-box
  font-smoothing antialiased

a
  text-decoration none

svg text
  font 12px Montserrat

html
  background url('/images/background.jpg') no-repeat center center fixed
  background-size cover
  height 100%
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

body
  height 100%
  line-height 2
  font-family Montserrat, 'Helvetica Neue', Helvetica, sans-serif
  font-size 16px
  background-color rgba(249,249,247, 0.3)
  position relative

h1
  font-size 30px
  color white
  padding-left 20px

header
  position absolute
  height 80px
  padding 10px
  background $dark
  absolute left top right
  top 10px
  left 10px
  right 10px

#navbar-content
  absolute top right
  margin-right 10px
  right 10px
  top 10px
  height 100%
  line-height 25px

  label
    color #ccc
    margin 0 30px 4px 0

  input
    color #a1b73e
    background #252233
    border 0
    font-size 20px
    padding 4px
    width 80px
    margin-right 20px

    &:focus
      outline none

#sidebar
  position absolute
  top 100px
  width 20%
  absolute left
  background $lightest
  padding 20px
  margin-left 10px
  bottom 220px

  input
    padding 6px 10px
    font-size 16px
    border 0
    border-bottom 3px solid #ddd
    width 100px

    &:focus
      outline none

  .grid a
    display inline-block
    //background #2495BF
    background $light
    height 25%
    width 100%
    line-height 100px
    text-align center
    color #111
    border 1px solid #ddd
    border-bottom 0

    &:last-child
      border-bottom 1px solid #ddd

    &:hover
      background #eee
      font-weight 700

#content
  position absolute
  top 100px
  left 20%
  margin-left 20px
  bottom 220px
  right 10px
  background #fff
  padding 30px

#graph
  width 100%

footer
  position absolute
  height 200px
  absolute left bottom right
  bottom 10px

#category-nav
  background #cececc
  position absolute
  width 20%
  height 200px
  left 10px
  margin-right 10px

  a
    display block
    color #333
    height 50px
    line-height 50px
    padding-right 25px
    text-align right
    background linear-gradient(#ddd, #ccc)

    img
      height 40px
      padding-top 10px
      float left
      padding-left 20px

    &:hover, &.active
      background linear-gradient(#fff, #eee)
      font-weight 700

#subfooter
  position absolute
  height 200px
  absolute left bottom right
  left 20%
  margin-left 20px

#sub-category-nav
  position absolute
  width 50%
  background rgba(168, 191, 57, .9)
  height 200px

  .grid a
    display inline-block
    height 200px
    width 25%
    line-height 200px
    text-align center
    color #222
    font-size 22px
    padding-top 20px
    border-bottom 1px solid rgba(168, 191, 120, 1)
    border-right 1px solid rgba(168, 191, 120, 1)

    &:nth-child(4n)
      border-right 0

    img
      height 60px
      width 60px

    &:hover, &.active
      font-weight 700
      color #fff
      background rgba(168, 191, 70, 1)

      img
        -webkit-filter brightness(20%)

#footer-content
  position absolute
  //background #bdc3c7
  background rgba(255, 255, 255, .7)
  padding 20px
  left 50%
  height 100%
  margin-left 10px
  right 10px

  h2
    font-weight bold
    border-bottom 1px solid #ccc
    text-align left

  .toggle
    width 50%
    cursor pointer

  .togglelabel
    background-color: #312e3f

  .toggleslider
    background-color: rgb(168, 191, 57)

.consumption
  text-align left
  margin-top 10px
  color #666
  padding 10px

  span, input
    color #333
    margin-left 6px
    float right

.form
  margin-top 20px

.settings
  position relative
  top 0

  &.ng-leave, &.ng-enter
    transition all .6s

  &.ng-enter
    opacity 0
    z-index 50

  &.ng-enter.ng-enter-active
    opacity 1

  &.ng-leave
    opacity 1
    z-index 200

  &.ng-leave.ng-leave-active
    opacity 0
    height 0

.hide
  display none

.large-page
  bottom 10px !important

@import 'tabs'
